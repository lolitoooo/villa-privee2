{% extends 'base.html.twig' %}

{% block title %}Confirmation de réservation{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                        <h1 class="h3 mt-3">Réservation confirmée !</h1>
                        <p class="text-muted">Votre réservation a été confirmée avec succès.</p>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Détails de la réservation</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Villa :</strong> {{ reservation.villa.title }}</p>
                                    <p><strong>Dates :</strong> {{ reservation.startDate|date('d/m/Y') }} - {{ reservation.endDate|date('d/m/Y') }}</p>
                                    <p><strong>Nombre de nuits :</strong> {{ reservation.nights }}</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>N° de réservation :</strong> {{ reservation.invoiceNumber }}</p>
                                    <p><strong>Statut :</strong> <span class="badge bg-success">Confirmée</span></p>
                                    <p><strong>Total payé :</strong> {{ reservation.totalPrice|format_currency('EUR') }}</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        Un email de confirmation avec tous les détails a été envoyé à <strong>{{ reservation.user.email }}</strong>
                    </div>

                    <div class="text-center mt-4">
                        <a href="{{ path('app_account_reservations') }}" class="btn btn-primary">
                            <i class="bi bi-list me-2"></i>Voir mes réservations
                        </a>
                        <a href="{{ path('app_villa_index') }}" class="btn btn-outline-primary ms-2">
                            <i class="bi bi-house me-2"></i>Retour aux villas
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
